{
  "manifest_version": 3,
  "name": "Hello Kitty Bug Replacer",
  "version": "1.0.0",
  "description": "Replaces Jira bug icons with a Hello Kitty icon and adds a heart splash animation on hover.",
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["images/hello_kitty.png", "style.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "48": "images/hello_kitty.png",
    "128": "images/hello_kitty.png"
  },
  "action": {
    "default_title": "Hello Kitty Bug Replacer"
  }
}
